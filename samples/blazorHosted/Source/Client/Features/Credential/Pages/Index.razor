@namespace Hyperledger.Aries.AspNetCore.Features.Credentials.Pages
@inherits BaseComponent
@page "/Credentials"

  <div data-qa="@TestId">
    <br />
    <h1>Credential Items</h1>
    <button class="btn btn-primary" @onclick=@CreateClick>Create</button>

    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th>ConnectionId</th>
          <th>CredentialDefinitionId</th>
          <th>Attribute Count</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        @foreach (var credential in CredentialState.CredentialsAsList)
        {
          <tr>
            <td>@credential.Id</td>
            <td>@credential.ConnectionId</td>
            <td>@credential.CredentialDefinitionId</td>
            <td>@credential.CredentialAttributesValues.Count()</td>
            <td>
              @*<a href=@Pages.Edit.GetRoute(credential.Id)>
                Edit
              </a>*@
              |
              @*<a href=@Pages.Details.GetRoute(credential.Id)>
                Details
              </a>*@
              |
              @*<a href=@Pages.Delete.GetRoute(credential.Id)>
                Delete
              </a>*@
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>